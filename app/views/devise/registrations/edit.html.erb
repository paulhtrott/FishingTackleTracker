<div class="header-container">
  <div class="container">
    <h1>Edit Your Information</h1>
    <p>Update or close your account</p>
  </div>
</div>
<div class="container">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
      <%= f.input :password_confirmation, required: false %>
      <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Update My Account", :class => "btn btn-primary btn-lg active blue", :role => "button" %>
    </div>
  <% end %>
  <br>
  <%= link_to "Back to dashboard", :back, :class => "btn btn-primary btn-sm", :role => "button" %>
  <br>
  <br>
  <br>
  <p><em>Unhappy?</em> <%= link_to "Close your account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => "btn btn-danger", :role => "button"  %></p>
</div>
