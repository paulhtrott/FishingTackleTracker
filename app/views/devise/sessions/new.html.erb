<div class="header-container">
  <div class="container">
    <h1>Sign in</h1>
    <p>Sign in to your account to track your awesome fishing and boating supplies.</p>
  </div>
</div>
<div class="container">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true %>
      <%= f.input :password, required: false %>
      <%= f.input :remember_me, as: :boolean, :label => false, :inline_label => true if devise_mapping.rememberable? %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Sign in", :class => "btn btn-primary btn-lg active blue", :role => "button" %>
    </div>
  <% end %>
  <br>
  <%= render "devise/shared/links" %>
</div>
