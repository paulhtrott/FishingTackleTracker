<div class="header-container">
  <div class="container">
    <h1>Change your password</h1>
    <p>Please remember to set a secure password.</p>
  </div>
</div>
<div class="container">
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <%= f.input :reset_password_token, as: :hidden %>
    <%= f.full_error :reset_password_token %>

    <div class="form-inputs">
      <%= f.input :password, label: "New password", required: true, autofocus: true %>
      <%= f.input :password_confirmation, label: "Confirm your new password", required: true %>
    </div>
    <br>
    <div class="form-actions">
      <%= f.button :submit, "Change my password" %>
    </div>
  <% end %>
  <br>
  <%= link_to "Sign in", new_user_session_path, :class => "btn btn-primary btn-sm", :role => button" %>
  <%= link_to "Sign up", new_user_registration_path, :class => "btn btn-default btn-sm", :role => button" %>
</div>
